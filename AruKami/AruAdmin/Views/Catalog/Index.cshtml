@model AruAdmin.Models.CurrentCatalog

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <a class="col-md-6 btn btn-success fa fa-plus" data-toggle="modal" data-target="#modalAgregar" data-type-id="@Model._type">   Create</a>
    </div>
</div>

<div class="box">
    <div class="box-header">
        <h3 class="box-title">@Model._name</h3>
    </div>
    <div class="box-body">
        <table id="checkout" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayName("Name")</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model._listCatalog)
                {
                    <tr>
                        <td>@item.GetName()</td>
                        <td align="center">
                            <a class="btn btn-primary fa fa-pencil-square" data-toggle="modal" data-target="#modalEditar" data-name="@item.GetName()" data-type-id="@Model._type" data-item-id="@item.GetId()"></a>
                            @{
                                if (item._state)
                                {
                                    <a class="btn btn-danger fa fa-ban" data-toggle="modal" data-target="#modalDelete" data-name="@item.GetName()" data-type-id="@Model._type" data-item-id="@item.GetId()"></a>
                                }
                                else
                                {
                                    <a class="btn btn-success fa fa-check-circle" data-toggle="modal" data-target="#modalActivar" data-name="@item.GetName()" data-type-id="@Model._type" data-item-id="@item.GetId()"></a>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



<div class="modal modal-danger" id="modalDelete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title"></h4>
            </div>
            <form id="deleteForm" action="" method="post">
                <div class="modal-body">
                    <p>Do you really wanna delete the item?</p>
                    <p><i>Note: if the item is been used is gonna be disabled.</i></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline">Delete</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>






<div class="modal modal-success" id="modalActivar">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title"></h4>
            </div>
            <form id="activarForm" action="" method="post">
                <div class="modal-body">
                    <p>activar esta mierda ?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline pull-left" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-outline">Activate</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<div class="modal" id="modalAgregar">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title"> Create</h4>
            </div>
            <form id="createForm" action="" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label col-md-2" for="">Name</label>
                        <div class="col-md-10">
                            @Html.Editor("itemName", new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger pull-left" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>





<div class="modal" id="modalEditar">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Edit</h4>
            </div>
            <form id="editForm" action="" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label col-md-2" for="">Name</label>
                        <div class="col-md-10">
                            @Html.Editor("itemNameEdit", new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger pull-left" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </form>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/datatables/js")
    @Scripts.Render("~/Scripts/Checks/Table")
    @Scripts.Render("~/Scripts/Catalog/Index")
}
