
@model IEnumerable<AruAdmin.Models.EventLog>

@{
    ViewBag.Title = "Event Log";
}

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Event Log</h3>
    </div>
    <div class="box-body">
        <table id="checkout" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayName("Table")</th>
                    <th>@Html.DisplayName("Change Type")</th>
                    <th>@Html.DisplayName("Description")</th>
                    <th>@Html.DisplayName("Date")</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AffectedTable</td>
                        <td>@item.ChangeType</td>
                        <td>@item.Description</td>
                        <td>@item.Date</td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/AdminLTE/plugins/datatables/js")
}
